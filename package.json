{
  "name": "at-protocol-space-invaders",
  "version": "1.0.0",
  "description": "Space Invaders game bookmarklet with AT Protocol integration",
  "main": "game.js",
  "scripts": {
    "build": "node build.js",
    "dev": "python -m http.server 8000 || python3 -m http.server 8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix"
  },
  "devDependencies": {
    "terser": "^5.24.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "^27.6.3",
    "@playwright/test": "^1.40.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "*.js",
      "!build.js",
      "!jest.setup.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": ["bookmarklet", "game", "at-protocol", "space-invaders"],
  "author": "",
  "license": "MIT"
}